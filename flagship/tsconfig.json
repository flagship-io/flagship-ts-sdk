{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/deps.ts"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true
  }
}
