{
  "include": ["flagship/src/**/*"],
  "exclude": ["node_modules", "flagship/src/depsDeno.ts"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["flagship/src/*"]
    }
  }
}
